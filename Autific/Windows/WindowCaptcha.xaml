        <StackPanel HorizontalAlignment="Center">
            <TextBlock>Подтвердите, что вы не робот, введите текст с картинки</TextBlock>
            <Canvas Name="canv" Width="250" Height="100">
                
            </Canvas>
            <TextBox Name="textboxCaptcha" Margin="0,10,0,0" ></TextBox>
